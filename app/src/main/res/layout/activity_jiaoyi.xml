<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey">

    <LinearLayout
        android:id="@+id/jiaoyi_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/jingzhi_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="基金名称"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/jingzhi_daima"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="00001"
                android:textColor="@color/black_overlay"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/jignzhi_dwjz1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="dwjz1"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/jingzhi_ljjz1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="00001"
                android:textColor="@color/black_overlay"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/jingzhi_rzzz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="基金名称"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/jingzhi_rzzl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="00001"
                android:textColor="@color/black_overlay"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/jiaoyi_item"
        android:layout_marginTop="16dp"
        android:background="@color/white2">

        <RadioGroup
            android:id="@+id/radioGroup"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/buy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rediobg"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:padding="8dp"
                android:text="买入" />

            <RadioButton
                android:id="@+id/sell"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rediobg"
                android:button="@null"
                android:gravity="center"
                android:padding="8dp"
                android:text="卖出" />
        </RadioGroup>

        <TextView

            android:id="@+id/jiaoyi_cash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/radioGroup"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="可交易现金200000"
            android:textColor="@color/black_overlay" />

        <LinearLayout
            android:id="@+id/jiaoyi_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/jiaoyi_cash"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/buy_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="买入金额:"
                android:textSize="18sp" />

            <EditText
                android:layout_marginRight="16dp"
                android:id="@+id/buy_edittext"
                android:gravity="right"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <RadioGroup

            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:id="@+id/cangwei"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/jiaoyi_ll"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/one_eight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@drawable/rediobg"
                android:button="@null"

                android:gravity="center"
                android:padding="2dp"
                android:text="1/8" />
            <RadioButton
                android:id="@+id/one_four"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@drawable/rediobg"
                android:button="@null"
                android:gravity="center"
                android:padding="2dp"
                android:text="1/4" />
            <RadioButton
                android:id="@+id/one_two"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@drawable/rediobg"
                android:button="@null"
                android:gravity="center"
                android:padding="2dp"
                android:text="1/2" />
            <RadioButton
                android:id="@+id/one_one"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@drawable/rediobg"
                android:button="@null"
                android:gravity="center"
                android:padding="2dp"
                android:text="全仓" />
        </RadioGroup>
        <LinearLayout
            android:id="@+id/jiaoyi_shui"
            android:layout_marginBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cangwei"
            android:layout_marginTop="4dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="horizontal">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="手 续 费:"
                android:textSize="18sp" />

            <EditText
                android:layout_marginRight="16dp"
                android:inputType="number"
                android:gravity="right"
                android:id="@+id/buy_shui"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>
    <Button
        android:id="@+id/jiaoyi_queren"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:textSize="22sp"
        android:text="买入"
        android:background="@color/red"
        android:layout_margin="16dp"/>
</RelativeLayout>