<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/grey"
    android:id="@+id/third_scroll"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/third_head"
        android:layout_width="match_parent"
        android:background="#fff"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/biaoti"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/zhuyaozhibiao"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:gravity="center"
                android:textSize="18sp"
                android:text="一般公共预算完成情况"/>
            <TextView
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@+id/zhuyaozhibiao"
                android:text="单位：亿元"
                android:textSize="8dp"

                android:layout_height="wrap_content" />
        </RelativeLayout>
        <ImageView
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_below="@+id/biaoti"
            android:layout_height="0.2dp"
            android:background="@color/grey"/>

        <com.example.app.view.LinearLayoutForListView
            android:id="@+id/budget"
            android:layout_below="@id/line"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </com.example.app.view.LinearLayoutForListView>

    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="8dp"
        android:layout_below="@+id/third_head"
        android:layout_width="match_parent"
        android:background="#fff"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/biaoti1"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/center"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:gravity="center"
                android:textSize="18sp"
                android:text="中心城区GDP完成情况(季报)"/>
            <TextView
                android:layout_marginRight="8dp"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@+id/center"
                android:text="单位：亿元"
                android:textSize="8dp"

                android:layout_height="wrap_content" />
        </RelativeLayout>
        <ImageView
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_below="@+id/biaoti1"
            android:layout_height="0.5dp"
            android:background="@color/grey"/>
        <RelativeLayout
            android:layout_below="@id/line1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.example.app.view.LinearLayoutForListView
                android:id="@+id/center_gdpp"

                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

            </com.example.app.view.LinearLayoutForListView>
        </RelativeLayout>
    </RelativeLayout>
    </RelativeLayout>


</ScrollView>